  },
  "homepage": "https://github.com/notMelonBread/positionVisualizer#readme",
  "dependencies": {
    "ws": "^8.18.3",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
